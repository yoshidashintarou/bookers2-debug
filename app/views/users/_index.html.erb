<table class='table table-hover table-inverse'>
  <thead>
    <tr>
       <th></th>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td><% if user.profile_image.attached? %>
             <%= image_tag user.profile_image,size: "50x50" %>
            <% else %>
             <%= image_tag 'no_image', size: "50x50" %>
            <% end %></td>
        <td><%= user.name %></td>
        <td><%= link_to 'Show', user, class: "user_#{user.id}" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
